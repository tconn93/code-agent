# AI Provider API Keys
# At least one API key is required
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
# NOTE: If your password contains special characters, they must be URL-encoded:
#   @ becomes %40
#   : becomes %3A
#   / becomes %2F
#   $ becomes %24
#   * becomes %2A
#   # becomes %23
# Example: password "my$pass*word" becomes "my%24pass%2Aword"
DATABASE_URL=postgresql://agent_user:agent_password@db:5432/agent_platform

# For local development (without Docker) or external database:
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# For local development (without Docker):
# REDIS_URL=redis://localhost:6379/0

# Worker Configuration
POLL_INTERVAL=5
HEARTBEAT_INTERVAL=30
MAX_ITERATIONS=20
OUTPUT_TRUNCATE_LENGTH=5000
DOCKER_IMAGE=coding-agent-sandbox

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration (for development)
VITE_API_URL=http://localhost:8000
